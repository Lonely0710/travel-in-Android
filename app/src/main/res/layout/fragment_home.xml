<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <include
            layout="@layout/topbar_home_explore_routes"
            android:id="@+id/topbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 顶部区域：弧形背景+内容 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="fitXY"
                android:src="@drawable/top_home_bg" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_top_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@android:color/transparent">

                <!-- 欢迎语 -->
                <TextView
                    android:id="@+id/tv_hi_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="120dp"
                    android:text="Hi, Linda"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 附加区 -->
                <LinearLayout
                    android:id="@+id/ll_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hi_user"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_welcome"
                        android:tint="@color/color_accent"
                        android:layout_marginEnd="4dp"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:id="@+id/tv_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome!"
                        android:textColor="@color/color_accent"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 头像 -->
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_avatar_circle"
                    android:elevation="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- EXPLORE按钮，放在头像左边，顶部区域 -->
                <LinearLayout
                    android:id="@+id/btn_get_recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_explore_card_gradient"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toStartOf="@id/iv_avatar"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/iv_btn_explore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_btn_travel"
                        android:tint="@color/white"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:id="@+id/tv_btn_explore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPLORE"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search_bar"
                    android:gravity="center_vertical"
                    android:layout_marginTop="26dp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hi_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_search"
                        android:tint="@color/text_secondary"
                        tools:ignore="UseAppTint" />

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Where to go?"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="16sp"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:inputType="text" />

                    <!-- 搜索框右侧骰子图标和背景 -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_dice_rounded_right">

                        <ImageView
                            android:id="@+id/iv_dice"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_dice" />

                    </FrameLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 轮播图卡片悬浮在下缘，直接写入内容 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!-- 轮播内容区域 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/city_carousel_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <!-- 左翻页按钮 -->
                <ImageView
                    android:id="@+id/btn_banner_left"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_banner_btn"
                    android:src="@drawable/ic_arrow_left"
                    android:padding="4dp"
                    android:alpha="0.7" />

                <!-- 右翻页按钮 -->
                <ImageView
                    android:id="@+id/btn_banner_right"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_banner_btn"
                    android:src="@drawable/ic_arrow_right"
                    android:padding="4dp"
                    android:alpha="0.7" />

                <!-- 指示器 -->
                <LinearLayout
                    android:id="@+id/banner_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="12dp"
                    android:elevation="8dp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp">
                    <!-- 小圆点可动态添加 -->
                    <!-- Existing dummy dots will be removed and added dynamically -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_banner_dot_selected"
                        android:visibility="gone"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_banner_dot_unselected"
                        android:visibility="gone"/>
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_banner_dot_unselected"
                        android:visibility="gone"/>
                </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- 分类按钮区 -->
        <include layout="@layout/category_buttons_home" />

        <!-- 并排双卡片区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- 天气卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:id="@+id/ll_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_weather_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_weather_sunny"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_weather_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北京·晴朗"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_weather_thermostat" />

                            <TextView
                                android:id="@+id/tv_weather_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25°C | 50%"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_secondary" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 待开发卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待开发"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- 内容区 -->
        <FrameLayout
            android:id="@+id/home_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/walking_man"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>